<div role="main" class="main">
    <section class="page-header page-header-modern bg-color-light-scale-1 page-header-lg">
        <div class="container">
            <div class="row">
                <div class="col-md-12 align-self-center p-static order-2 text-center">
                    <h1 class="font-weight-bold text-dark">@ViewData["Title"]</h1>
                </div>
            </div>
        </div>
    </section>

    <div class="container pt-3 pb-2">
        <form id="account" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-warning">
                    Credentials incorrect! Please try again with the correct credentials or <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>.
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-12 order-1 order-lg-2">
                <div class="row justify-content-md-center">
                    <div class="col-md-9">
                        <div class="featured-box featured-box-primary text-start mt-0">
                            <div class="box-content">
                                <h4 class="color-primary font-weight-semibold text-4 text-uppercase mb-3">Welcome back</h4>
                                <form action="/" id="frmSignIn" method="post" class="needs-validation" novalidate="novalidate">
                                    <div class="row">
                                        <div class="form-group col">
                                            <label asp-for="Input.Email" class="form-label">E-mail Address</label>
                                            <input type="email" asp-for="Input.Email" class="form-control" required>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col">
                                            <a class="float-end" asp-page="./ForgotPassword">Forgot your password?</a>
                                            <label asp-for="Input.Password" class="form-label">Password</label>
                                            <input type="password" asp-for="Input.Password" class="form-control" required>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-lg-6">
                                            <div class="custom-control custom-checkbox d-flex gap-1">
                                                <input type="checkbox" asp-for="Input.RememberMe" class="custom-control-input" id="rememberme">
                                                <label class="custom-control-label text-2" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-6">
                                            <a class="btn btn-default btn-modern float-start" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">I don't have an account</a>
                                            <input type="submit" value="Login" class="btn btn-primary btn-modern float-end" data-loading-text="Loading...">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
