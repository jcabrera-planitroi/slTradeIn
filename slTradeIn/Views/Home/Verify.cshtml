<div role="main" class="main">
    <section class="page-header page-header-modern bg-color-light-scale-1 page-header-lg">
        <div class="container">
            <div class="row">
                <div class="col-md-12 align-self-center p-static order-2 text-center">
                    <h1 class="font-weight-bold text-dark">Verify</h1>
                </div>
                <div class="col-md-12 align-self-center order-1">
                    <ul class="breadcrumb d-block text-center">
                        <li><a href="@Url.Action("UserProfile","Home")">User Profile</a></li>
                        <li class="active">Verify</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="container pt-3 pb-2">
        @using (Html.BeginForm(
            "VerifyCode",
            "Home",
            FormMethod.Post,
            new { @class = "needs-validation" }
        ))
        {
            @Html.Hidden("Redirect", ViewBag.Redirect as string)

            if (ViewBag.Message != null)
            {
                <div class="alert alert-warning">
                    The code entered was not valid.
                </div>
            }

            <div class="row">
                <h4>Please provide the code sent to your @ViewBag.Message mail</h4>
                <hr />
                <div class="form-group  col-lg-6">
                    <div class="col-lg-12">
                        <input class="form-control text-3 h-auto py-2" type="text" name="Code" value="" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Submit code" class="btn btn-primary btn-modern" data-loading-text="Loading...">
                </div>
            </div>
        }
    </div>
</div>
