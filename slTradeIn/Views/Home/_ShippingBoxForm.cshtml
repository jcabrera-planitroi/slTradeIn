@model slTradeIn.Models.BeforeTradeInModel

<script>
    $(() => {
        $('[type="radio"]', boxForm).click(() => {
            const options = { method: boxForm.method, body: new FormData(boxForm) };
            fetch(boxForm.action + '?save=true', options).then(() => {
                location.reload();
            });
        });
    });
</script>

@using (Html.BeginForm("BeforeTradeIn", "Home", FormMethod.Post, new { @class = "needs-validation", id = "boxForm" }))
{
<div class="mb-4 shipping-form">
    <div id="shippingMethod" class="row pt-2">
        <div class="col pb-3">
            <h4>What is your preferred logistic option?</h4>
            <table class="table">
                <tbody>
                    <tr>
                        <td style="width:10%">
                            <div class="form-check">
                                <div class="form-check-label">
                                    @Html.RadioButtonFor(x => x.TypeOfShipping, 1)
                                </div>
                            </div>
                        </td>
                        <td>Our Team can provide you with a full logistics solution</td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-check">
                                <div class="form-check-label">
                                    @Html.RadioButtonFor(x => x.TypeOfShipping, 2)
                                </div>
                            </div>
                        </td>
                        <td>
                            Our Team can help you with transportation only
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-check">
                                <div class="form-check-label">
                                    @Html.RadioButtonFor(x => x.TypeOfShipping, 3)
                                </div>
                            </div>
                        </td>
                        <td>
                            If you prefer to handle the entire logistics process,
                            our team can provide you the address
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mb-4 serialized-form">
    <div class="row pt-2">
        <div class="col pb-3">

            <h4>Do you need a Serialized Asset Report with proof of Social and Enviromental Impact?</h4>

            <table class="table">
                <tbody>
                    <tr>
                        <td style="width:10%">
                            <div class="form-check">
                                <div class="form-check-label">
                                    @Html.RadioButtonFor(q => q.NeedSerializedAssetReport, true)
                                </div>
                            </div>

                        </td>
                        <td>Yes, I want to  make a positive impact with our planet showing environmental responsibility</td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-check">
                                <div class="form-check-label">
                                    @Html.RadioButtonFor(q => q.NeedSerializedAssetReport, false)
                                </div>
                            </div>
                        </td>
                        <td>No, I'm not interested in participating in promote sustainable practices</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
}
