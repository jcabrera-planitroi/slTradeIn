<script>
    function ShowMailFormModal(userMail) {
        mailForm.action = `@Url.Action("Edit", "Mail")/${userMail.iEmailID}`;
        mailForm.querySelector('[name="vEmail"]').value = userMail.vEmail;
        mailForm.querySelector('[name="vName"]').value = userMail.vName;
        mailForm.querySelector('[name="vEmailGroup"]').value = userMail.vEmailGroup;
        $("#MailFormModal").modal("show");
    }
</script>

<!-- Modal -->
<div class="modal fade" id="MailFormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit user mail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="HideMailFormModal();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <form id="mailForm" action="@Url.Action("Edit", "Mail")" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="vEmail" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="vName" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Group</label>
                            <input type="text" name="vEmailGroup" class="form-control">
                        </div>

                        <button class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

