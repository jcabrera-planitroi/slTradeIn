@model slTradeIn.Models.EmailTemplateModel

@{
    ViewBag.Title = "CreateEmailTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div role="main" class="main">
    <section class="page-header page-header-modern bg-color-light-scale-1 page-header-lg">
        <div class="container">
            <div class="row">
                <div class="col-md-12 align-self-center p-static order-2 text-center">
                    <h1 class="font-weight-bold text-dark">Create Email Template</h1>
                </div>
                <div class="col-md-12 align-self-center order-1">
                    <ul class="breadcrumb d-block text-center">
                        <li><a href="@Url.Action("UserProfile","Home")">User Profile</a></li>
                        <li class="active">Email Templates</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <div class="container pt-3 pb-2">
        @using (Html.BeginForm("CreateEmailTemplate", "Admin", FormMethod.Post, new { @class = "needs-validation" }))
        {
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <label>Template Name:</label>
                    @Html.TextBoxFor(et => et.vTemplateName, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(et => et.vTemplateName, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-4">
                    <label>Subject:</label>
                    @Html.TextBoxFor(et => et.vSubject, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(et => et.vSubject, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <label>HTML Body:</label>
                    @Html.TextAreaFor(e => e.vHTMLBody, new { @class = "form-control tinymce", rows = "12", @required = "required" })
                    @Html.ValidationMessageFor(et => et.vHTMLBody, null, new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <input type="submit" class="btn btn-default" value="Save Template" /> <input type="button" class="btn btn-default" onclick="location.href='@Url.Action("EmailTemplate", "Admin")'" value="Cancel" />
        }
    </div>
</div>



